<div class="my-5">
    <h1 class="text-center mb-5"><%=title%></h1>
    <div id="div_list"></div>
    <script id="temp_list" type="x-handlebars-template"> 
        <table class="table">
            {{#each .}}
                <tr>
                    <td><img src="{{thumbnail}}" width="50px"></td>
                    <td>{{title}}<br>{{price}}<br>{{authors}}<br></td>
                </tr>
            {{/each}}
        </table>
    </script>
</div>

<script type="module">
    import { app } from '/javascripts/config.js'
    import { getDatabase, onValue, ref } from "https://www.gstatic.com/firebasejs/10.13.2/firebase-database.js"
    const db = getDatabase(app);

    // 장바구니 목록
    onValue(ref(db, `cart/${uid}`), snapshot => {
        // console.log(snapshot);
        let rows = [];
        snapshot.forEach(row => {
            rows.push({key:row.key, ...row.val()}); // ... 은 복제한다는 의미, 복제 해서 붙인다???
        });
        console.log(rows);
        const temp=Handlebars.compile($("#temp_list").html());
        $("#div_list").html(temp(rows));
    });

</script>